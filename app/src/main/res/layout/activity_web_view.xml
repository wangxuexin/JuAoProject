<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#fff"
    tools:context="com.fizz.JuAoProject.WebViewActivity">

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/main_radio"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#eeeeee"
        android:layout_alignParentBottom="true"
        android:padding="2dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <com.fizz.JuAoProject.widget.CustomerRadiobutton
            android:id="@+id/main_button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="新闻资讯"

            app:drawableTop="@drawable/btn_news_selector"
            app:imgSize="47dp"
            android:clickable="true"

            android:textColor="@color/txt_color_selector"
            android:textSize="10sp"
            android:button="@null"
            android:gravity="center"
            />

        <com.fizz.JuAoProject.widget.CustomerRadiobutton
            android:id="@+id/main_button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="活动预订"

            app:drawableTop="@drawable/btn_act_selector"
            app:imgSize="47dp"
            android:clickable="true"

            android:textColor="@color/txt_color_selector"
            android:textSize="10sp"
            android:button="@null"
            android:gravity="center"
            />


        <com.fizz.JuAoProject.widget.CustomerRadiobutton
            android:id="@+id/main_button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="聚宝盆"

            app:drawableTop="@drawable/btn_jhs_selector"
            app:imgSize="47dp"
            android:clickable="true"

            android:textColor="@color/txt_color_selector"
            android:textSize="10sp"
            android:button="@null"
            android:gravity="center"
            />

        <com.fizz.JuAoProject.widget.CustomerRadiobutton
            android:id="@+id/main_button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="生活秀"

            app:drawableTop="@drawable/btn_lifeshow_selector"
            app:imgSize="47dp"
            android:clickable="true"

            android:textColor="@color/txt_color_selector"
            android:textSize="10sp"
            android:button="@null"
            android:gravity="center"
            />

        <com.fizz.JuAoProject.widget.CustomerRadiobutton
            android:id="@+id/main_button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="个人中心"

            app:drawableTop="@drawable/btn_my_selector"
            app:imgSize="47dp"
            android:clickable="true"

            android:textColor="@color/txt_color_selector"
            android:textSize="10sp"
            android:button="@null"
            android:gravity="center"
            />




    </RadioGroup>



</LinearLayout>
